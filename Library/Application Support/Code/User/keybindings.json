// Place your key bindings in this file to overwrite the defaults
[
  {
    "key": "alt+cmd+2",
    "command": "workbench.action.editorLayoutTwoColumns"
  },
  {
    "key": "alt+cmd+3",
    "command": "workbench.action.editorLayoutThreeColumns"
  },
  {
    "key": "alt+cmd+4",
    "command": "workbench.action.editorLayoutTwoByTwoGrid"
  },
  {
    "key": "cmd+o",
    "command": "workbench.action.quickOpen"
  },
  {
    "key": "shift+cmd+o",
    "command": "workbench.action.files.openFileFolder"
  },
  {
    "key": "shift+cmd+o",
    "command": "workbench.action.files.openLocalFileFolder",
    "when": "remoteFileDialogVisible"
  },
  {
    "key": "cmd+p",
    "command": "-workbench.action.quickOpen"
  },
  {
    "key": "cmd+p",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "alt+cmd+m",
    "command": "editor.action.toggleMinimap"
  },
  {
    "key": "ctrl+tab",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "workbench.action.previousEditor"
  },
  {
    "key": "shift+k",
    "command": "editor.action.showHover",
    "when": "editorTextFocus && vim.active && vim.mode == 'Normal'"
  },
  {
    "key": "shift+cmd+t",
    "command": "extension.elixirRunTestFile",
    "when": "editorLangId == elixir"
  },
  {
    "key": "shift+cmd+s",
    "command": "extension.elixirRunTestAtCursor",
    "when": "editorLangId == elixir"
  },
  {
    "key": "shift+cmd+s",
    "command": "extension.runSpecLine"
  },
  {
    "key": "cmd+l",
    "command": "-extension.runSpecLine"
  },
  {
    "key": "cmd+r",
    "command": "-extension.runAllSpecFiles"
  },
  // https://dev.to/ajkerrigan/bring-your-vim-tmux-navigation-reflexes-to-vs-code-3abi
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.previousPanelView",
    "when": "panelFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.nextPanelView",
    "when": "panelFocus"
  },
  {
    "key": "ctrl+u",
    "command": "workbench.action.terminal.scrollUpPage",
    "when": "panelFocus"
  },
  {
    "key": "ctrl+d",
    "command": "workbench.action.terminal.scrollUpDown",
    "when": "panelFocus"
  }
]